<?xml version="1.0" encoding="utf-8"?><!-- suppress AndroidDomInspection -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.renanbarbieri.gamestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.renanbarbieri.gamestore.presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.renanbarbieri.gamestore.presentation.ui.AppDetailsActivity"
            android:label="@string/title_activity_app_details"
            android:parentActivityName="br.com.renanbarbieri.gamestore.presentation.ui.MainActivity"
            android:theme="@style/AppTheme.NoStatusBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.renanbarbieri.gamestore.presentation.ui.MainActivity" />
        </activity>
    </application>

</manifest>