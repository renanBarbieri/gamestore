<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItemBadgeIcon"
        android:layout_width="@dimen/itemAppBadgeWidth"
        android:layout_height="@dimen/itemAppBadgeHeight"
        android:layout_margin="@dimen/itemAppPadding"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemBadgeDescription"
        android:layout_width="@dimen/itemAppBadgeWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="EXCLUSIVE\nFOR YOU"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/ivItemBadgeIcon"
        app:layout_constraintStart_toStartOf="@+id/ivItemBadgeIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivItemBadgeIcon" />

</android.support.constraint.ConstraintLayout>